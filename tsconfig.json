{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "declaration": true,
        "declarationMap": true,
        "outDir": "./lib",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node",
        "isolatedModules": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "types": ["node"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib", "test"]
}
